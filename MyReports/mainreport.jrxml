<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="student_main_report"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <!-- Student Basic Info -->
    <parameter name="studentName" class="java.lang.String">
        <defaultValueExpression><![CDATA["Rahul Sharma"]]></defaultValueExpression>
    </parameter>

    <parameter name="rollNo" class="java.lang.String">
        <defaultValueExpression><![CDATA["101"]]></defaultValueExpression>
    </parameter>

    <detail>
        <band height="200">

            <!-- Title -->
            <staticText>
                <reportElement x="0" y="0" width="300" height="30"/>
                <text><![CDATA[Student Report]]></text>
            </staticText>

            <!-- Student Name -->
            <textField>
                <reportElement x="0" y="40" width="300" height="30"/>
                <textFieldExpression><![CDATA["Name: " + $P{studentName}]]></textFieldExpression>
            </textField>

            <!-- Roll Number -->
            <textField>
                <reportElement x="0" y="70" width="300" height="30"/>
                <textFieldExpression><![CDATA["Roll No: " + $P{rollNo}]]></textFieldExpression>
            </textField>

            <!-- Subreport -->
            <subreport>
                <reportElement x="0" y="110" width="500" height="80"/>

                <!-- Subreport Path -->
                <subreportExpression><![CDATA["subreport.jasper"]]></subreportExpression>

                <!-- Sample Data for Marks -->
                <dataSourceExpression><![CDATA[
                    new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource(
                        java.util.Arrays.asList(
                            new Object(){ public String getSubject(){return "Math";} public Integer getMarks(){return 85;} },
                            new Object(){ public String getSubject(){return "Science";} public Integer getMarks(){return 90;} },
                            new Object(){ public String getSubject(){return "English";} public Integer getMarks(){return 78;} },
                            new Object(){ public String getSubject(){return "Computer";} public Integer getMarks(){return 95;} }
                        )
                    )
                ]]></dataSourceExpression>

            </subreport>

        </band>
    </detail>

</jasperReport>
